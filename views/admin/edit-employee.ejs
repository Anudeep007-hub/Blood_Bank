<% include('../layouts/header.ejs') %>

<style>
    body {
        background-color: rgb(63, 57, 57);
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: red;
        text-align: center;
        margin-top: 50px;
    }

    form {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 2px solid black;
        border-radius: 10px;
    }

    input[type="name"],
    input[type="email"],
    input[type="text"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 15px;
        color: black; /* Adjust text color for visibility */
        background-color: #fff; /* Set background color for input fields */
    }

    label {
        display: block;
        font-size: 16px;
        color: rgb(136, 8, 8);
        margin-bottom: 5px;
    }

    input[type="radio"] {
        margin-right: 10px;
        vertical-align: middle;
    }

    button[type="submit"] {
        display: block;
        width: 150px;
        margin: 20px auto;
        padding: 10px;
        background-color: red;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button[type="submit"]:hover {
        background-color: black;
    }

    a {
        display: block;
        text-align: center;
        color: red;
        text-decoration: none;
        margin-top: 20px;
    }
</style>

<h1>Edit Employee</h1>

<form action="/admin/edit-employee" method="post">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Enter Name" value="<%= employee.name %>" required>

    <label for="email">Email</label>
    <input type="email" name="email" placeholder="Enter Email" value="<%= employee.email %>" required>

    <label for="mno">Mobile</label>
    <input type="text" name="mno" placeholder="Enter Mobile" value="<%= employee.phone%>" required>

    <label>Verification</label>
<div style="display: flex;align-items: baseline;">
    <input type="radio" id="verified" name="verify" value="1" <% if (employee.is_varified === 1) { %>checked<% } %>>
    <label for="verified">Verified</label>
</div>

<div style="display: flex;align-items: baseline;">
    <input type="radio" id="unverified" name="verify" value="0" <% if (employee.is_varified === 0) { %>checked<% } %>>
    <label for="unverified">Unverified</label>
</div>
    <input type="hidden" name="id" value="<%= employee._id %>">
    <button type="submit">Update Employee</button>
</form>

<a href="/admin/EmployeeDashboard">Go to Dashboard</a>

<% include('../layouts/footer.ejs') %>
