<% include('../layouts/header.ejs') %>

<style>
    body {
        background-color: rgb(63, 57, 57);
        color: black;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .edit-profile-container {
        width: 45%;
        margin: 50px auto;
    }

    .edit-profile {
        padding: 20px;
        background-color: white;
        border: 2px solid black;
        border-radius: 10px;
    }

    .edit-profile h1 {
        color: red;
        text-align: center;
    }

    input[type="text"],
    input[type="email"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-size: 16px;
        color: rgb(136, 8, 8);
        margin-bottom: 5px;
    }

    input[type="radio"] {
        margin-right: 10px;
        vertical-align: middle;
    }

    button[type="submit"] {
        display: block;
        width: 150px;
        margin: 20px auto;
        padding: 10px;
        background-color: red;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button[type="submit"]:hover {
        background-color: black;
    }

    a {
        display: block;
        text-align: center;
        color: red;
        text-decoration: none;
        margin-top: 20px;
    }
</style>

<div class="edit-profile-container">
    <div class="edit-profile">
        <h1>Edit Support Team</h1>

        <form action="/admin/edit-support" method="post">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter Name" value="<%= supportTeam.name %>" required>
            <br><br>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter Email" value="<%= supportTeam.email %>" required>
            <br><br>

            <label for="mno">Mobile</label>
            <input type="text" id="mno" name="mno" placeholder="Enter Mobile" value="<%= supportTeam.mobile %>" required>
            <br><br>

            <label>Verification</label>
            <div style="display: flex; align-items: baseline;">
                <input type="radio" id="verified" name="verify" value="1" <% if (supportTeam.is_varified === 1) { %>checked<% } %>>
                <label for="verified">Verified</label>
            </div>
            <div style="display: flex; align-items: baseline;">
                <input type="radio" id="unverified" name="verify" value="0" <% if (supportTeam.is_varified === 0) { %>checked<% } %>>
                <label for="unverified">Unverified</label>
                <br><br>
            </div>
            <input type="hidden" name="id" value="<%= supportTeam._id %>">
            <button type="submit">Update</button>
        </form>
    </div>
    <div style="display: flex; justify-content: center;">
        <a href="/admin/support">Go to Support Dashboard</a>
    </div>
</div>

<% include('../layouts/footer.ejs') %>
