<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADD MEDICAL PROFESSIONAL</title>
    <style>
        body {
            background-color: rgb(63, 57, 57);
            color: black;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .edit-profile {
            width: 45%;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border: 2px solid black;
            border-radius: 10px;
        }

        .edit-profile h2 {
            color: red;
            text-align: center;
        }

        .profile-picture {
            width: 175px;
            height: 175px;
            border: 2px solid black;
            border-radius: 5%;
            overflow: hidden;
            margin: 0 auto;
            text-align: center;
        }

        .profile-picture img {
            max-width: 100%;
            max-height: 100%;
        }

        .input-container {
            width: 80%;
            margin: 20px auto;
            position: relative;
        }

        input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input + label {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            font-size: 16px;
            color: #ccc;
            transition: all 0.3s ease;
            pointer-events: none;
            z-index: 1; 
        }

        input:focus + label,
        input:not(:placeholder-shown) + label {
            top: -10px;
            font-size: 12px;
            color: rgb(136, 8, 8);
            z-index: 1; 
        }

        button[type="submit"] {
            display: block;
            width: 150px;
            margin: 20px auto;
            padding: 10px;
            background-color: red;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: black;
        }
    </style>
</head>
<body>
    <div class="edit-profile">
        <h2>ADD MEDICAL PROFESSIONAL</h2>
        <form action="/admin/medicalprofessional" method="post" id="edit-profile-form" enctype="multipart/form-data">
            <div class="profile-picture">
                <img id="uploaded-image" src="">
                <p>Upload image</p>
            </div>
            <div class="input-container">
                <input type="file" id="profile-picture-input" accept="image/*" onchange="displayImage()" name="image">
                <label for="profile-picture-input">Profile Picture</label>
            </div>
            <div class="input-container">
                <input type="text" id="edit-name" name="name" placeholder=" ">
                <label for="edit-name">Name</label>
            </div>
            <div class="input-container">
                <input type="email" id="edit-email" name="email" placeholder=" ">
                <label for="edit-email">Email</label>
            </div>
            <div class="input-container">
                <input type="tel" id="edit-mobile" name="mobile" placeholder=" ">
                <label for="edit-mobile">Mobile</label>
            </div>
            <!-- <div class="input-container">
                <input type="password" id="edit-password" name="password" placeholder=" ">
                <label for="edit-password">Password</label>
            </div> -->
            <button type="submit">ADD</button>
        </form>
        <% if (typeof message !== 'undefined') { %>
            <p style="color: red;"><%= message %></p>
        <% } %>
        <a href="/admin/medicalprofessional">Go back</a>
    </div>

    <script>
        function displayImage() {
            const fileInput = document.getElementById('profile-picture-input');
            const uploadedImage = document.getElementById('uploaded-image');

            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    uploadedImage.src = e.target.result;
                };

                reader.readAsDataURL(fileInput.files[0]);
            } else {
                uploadedImage.src = '';
            }
        }
    </script>
</body>
</html>
