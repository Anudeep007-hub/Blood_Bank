<% include('../layouts/header.ejs')%>

<h1>Edit User</h1>

<form action="/admin/edit-user" method="post">
    <input type="name" name="name" placeholder="Enter email" value="<%=user.name%>" required>
    <br><br>
    <input type="email" name="email" placeholder="Enter Name" value="<%=user.email%>" required>
    <br><br>
    <input type="text" name="mno" placeholder="Enter Mobile" value="<%=user.mobile%>" required>
    <br><br>
    <label for="verified">Verified</label>
    <input type="radio" id="verified" name="verify" value="1" <% if (user.is_varified === 1) { %>checked<% } %>>
    <br><br>
    <label for="unverified">Unverified</label>
    <input type="radio" id="unverified" name="verify" value="0" <% if (user.is_varified === 0) { %>checked<% } %>>
    <br><br>
    <input type="hidden" name="id" value="<%=user._id%>">
    <input type="submit" value="Update User">
</form>

<a href="/admin/">Go to Dashboard</a>

<% include('../layouts/footer.ejs')%>
