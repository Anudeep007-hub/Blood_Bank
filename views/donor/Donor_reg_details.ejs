    <div class="contain">
        <form id="form" class="form" action="/donor/DonorDetails" method="POST" onsubmit="populateHiddenFields()">
            <input type="hidden" id="name" name="name" required>
            <input type="hidden" id="password" name="password" required>
            <input type="hidden" id="confirmPassword" name="confirmPassword" required>
            
            <label for="fname">First Name:</label><br>
            <input type="text" id="fname" name="fname" placeholder="Enter your first name" required><br><br>
            <label for="lname">Last Name:</label><br>
            <input type="text" id="lname" name="lname" placeholder="Enter your last name" required><br><br>
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email" placeholder="Enter your email" required><br><br>
            <label for="gend">Gender:</label><br>
            <select name="gend" id="gend" required>
                <option disabled selected value=""> -- Select gender --  </option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="others">Others</option>
            </select><br><br>
            <label for="age">Age:</label><br>
            <input type="number" id="age" name="age" placeholder="Enter your age" min="18" max="65" required><br><br>
            <label for="phone">Mobile Number:</label><br>
            <input type="tel" id="phone" name="phone" placeholder="Enter your mobile number (10 digits)" pattern="[0-9]{10}" required><br><br>
            <label for="bgroup">Blood Group:</label><br>
            <select name="bgroup" id="bgroup" required>
                <option disabled selected value=""> -- Select a blood group --  </option>
                <option value="AB-Ve">AB-</option>
                <option value="AB+Ve">AB+</option>
                <option value="A-Ve">A-</option>
                <option value="A+Ve">A+</option>
                <option value="B-Ve">B-</option>
                <option value="B+Ve">B+</option>
                <option value="O-Ve">O-</option>
                <option value="O+Ve">O+</option>
            </select><br><br>
            <label for="address">Address:</label><br>
            <textarea name="address" id="address" cols="30" rows="5" required></textarea><br><br>
            <label for="ID">Government ID type:</label><br>
            <select name="ID" id="ID" onchange="toggleIdNumberSection()" required>
                <option disabled selected value=""> -- Select a government ID --  </option>
                <option value="Aadhar">Aadhar Number</option>
                <option value="Driving License">Driving License</option>
                <option value="PAN">PAN</option>
                <option value="Passport">Passport Number</option>
                <option value="Voter ID">Voter ID</option>
            </select><br><br>
            <div id="idNumberSection" style="display: none;">
                <label for="id1">Government ID number:</label><br>
                <input type="text" id="id1" name="idnumber" placeholder="Enter your government ID number" required><br><br>
            </div>
            <input type="submit" value="Submit">

            

        </form>

        <script>
            document.getElementById("name").value = getQueryParam("name");
            document.getElementById("password").value = getQueryParam("password");
            document.getElementById("confirmPassword").value = getQueryParam("confirmPassword");

            function getQueryParam(param) {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get(param);
            }
