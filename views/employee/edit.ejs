<% include('../layouts/header.ejs') %>

<img style="width: 250px;" src="employeeImages/<%=user.image%>"  alt="">

<form action="/employee/edit" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
    <input type="hidden" name="employee_id" value="<%=user._id%>">
    <br><br>
    <input type="text" name="name" value="<%=user.name%>" placeholder="Enter name" required>
    <br><br>
    <input type="email" name="email" value="<%=user.email%>" placeholder="Enter Email" required>
    <br><br>
    <input type="text" name="mno" value="<%=user.mobile%>" placeholder="Enter Mobile" required>
    <br><br>
    <input type="submit" value="Update Profile">
</form>

